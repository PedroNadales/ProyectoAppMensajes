<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane styleClass="bg-dark" xmlns="http://javafx.com/javafx/17.0.12" xmlns:fx="http://javafx.com/fxml/1" fx:controller="es.iesfranciscodelosrios.dam1.pedro.proyectoaplicacionmensajes.controllers.MainController">

    <!-- Zona izquierda: lista de usuarios -->
    <left>
        <VBox spacing="10" styleClass="sidebar">
            <children>
                <Label styleClass="sidebar-title" text="Contactos" />
                <ListView fx:id="listaUsuarios" prefWidth="200" VBox.vgrow="ALWAYS" />
            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </left>

    <!-- Zona central: menú / contenido principal -->
    <center>
        <StackPane fx:id="panelCentral">

            <!-- Menú inicial (centrado mientras no haya chat) -->
            <VBox fx:id="menuInicial" alignment="CENTER" spacing="15">
                <Label styleClass="login-title" text="Menú principal" />
                <Button fx:id="btnAgregarContacto" onAction="#handleAgregarContacto" styleClass="btn-success" text="Agregar contacto" maxWidth="200" />
                <Button fx:id="btnCambiarFoto" onAction="#handleCambiarFoto" styleClass="btn-success" text="Cambiar foto de perfil" maxWidth="200" />
                <Button fx:id="btnCerrarSesion" onAction="#handleCerrarSesion" styleClass="btn-danger" text="Cerrar sesión" maxWidth="200" />
            </VBox>

            <!-- Chat: ocupa todo el espacio central -->
            <BorderPane fx:id="chatBox" managed="false" visible="false">


                <!-- Panel de mensajes (centro, con scroll) -->
                <center>
                    <ScrollPane fx:id="scrollChat" fitToHeight="true" fitToWidth="true" styleClass="message-area">
                        <VBox fx:id="chatMensajes" spacing="10" styleClass="bg-dark">
                            <padding>
                                <Insets bottom="10" left="10" right="10" top="10" />
                            </padding>
                        </VBox>
                    </ScrollPane>
                </center>

                <!-- Barra inferior para escribir mensajes -->
                <bottom>
                    <HBox spacing="5">
                        <padding>
                            <Insets bottom="10" left="10" right="10" top="10" />
                        </padding>
                        <TextField fx:id="txtMensaje" promptText="Escribe un mensaje..." styleClass="form-control" HBox.hgrow="ALWAYS" />
                        <Button fx:id="btnEnviar" styleClass="btn-success" text="Enviar" />
                        <Button fx:id="btnAdjuntar" text="📎 Adjuntar" styleClass="btn-success" />
                    </HBox>
                </bottom>

            </BorderPane>
        </StackPane>
    </center>

    <!-- Zona derecha: información del usuario / chat -->
    <right>
        <VBox fx:id="panelDerecho" alignment="TOP_CENTER" spacing="15" styleClass="sidebar-right">
            <children>
                <!-- Imagen de perfil -->
                <ImageView fx:id="imgPerfil" fitHeight="100" fitWidth="100" preserveRatio="true" />

                <Label fx:id="lblTituloPanelDerecho" styleClass="sidebar-title" text="Tu perfil" />

                <Label fx:id="lblNombreUsuario" styleClass="sidebar-right" text="Nombre: " />
                <Label fx:id="lblEmail" styleClass="sidebar-right" text="Email: " />
                <Label fx:id="lblFechaRegistro" styleClass="sidebar-right" text="Miembro desde: " />
                <Label fx:id="lblUltimaSesion" styleClass="sidebar-right" text="Última sesión: " />

                <Separator prefWidth="200" />
                <Button fx:id="btnResumen" text="Ver resumen" styleClass="btn-success"
                        prefWidth="150" />
                <VBox fx:id="boxResumen" spacing="5" visible="false" managed="false" styleClass="login-box" />
                <Button fx:id="btnExportar" text="Exportar conversación" styleClass="btn-success" />
                <!-- Botón de volver al menú (esquina inferior derecha) -->
                    <HBox alignment="BOTTOM_RIGHT" spacing="10">
                        <padding>
                            <Insets bottom="10" right="10" />
                        </padding>
                        <Button fx:id="btnVolverMenu" text="Volver al menú" onAction="#volverAlMenu" styleClass="btn-success" visible="false" managed="false" />
                    </HBox>

            </children>
            <padding>
                <Insets bottom="10" left="10" right="10" top="10" />
            </padding>
        </VBox>
    </right>
</BorderPane>
